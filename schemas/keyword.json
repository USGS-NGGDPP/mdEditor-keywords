{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "keyword.json#",
  "title": "keyword",
  "type": "object",
  "description": "Schema for a keyword",
  "example": "resources/keywords/lcc-category.json",
  "required": ["label", "uuid", "definition"],
  "additionalProperties": true,
  "properties": {
    "label": {
      "type": "object",
      "description": ""
    },
    "uuid": {
      "type": "string",
      "description": ""
    },
    "parentId": {
      "type": "string",
      "description": "Identifier of the parent keyword"
    },
    "definition": {
      "type": "string",
      "description": "Definition of the keyword"
    },
    "children": {
      "type": "array",
      "description": "List of child keywords",
      "items": {
        "$ref": "keyword.json#"
      }
    }
  }
}
